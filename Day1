package wiley.project;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Collections;
import java.util.Comparator;
import java.util.LinkedList;
import java.util.List;

public class collectionPractise {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		List<employee> emp=new ArrayList<>();
		 emp.add(new employee(1, "emp1",40000));
		 emp.add(new employee(5, "emp4",10000));
		 emp.add(new employee(2, "emp2",60000));
		 emp.add(new employee(3, "emp3",30000));
		
		
		 Collections.sort(emp,new sortsalary());
		 Collections.sort(emp,new sortName());
		 System.out.println(emp);
		 
	}
}
class employee implements Comparable<employee>{
	public int id;
	public int salary;
	public String name;
	
	public employee(int id,String name,int salary) {
		this.id=id;
		this.name=name;
		this.salary=salary;
	}


	@Override
	public int compareTo(employee o) {
	
		return this.id-o.id;
	}
	
@Override
public String toString() {
	
	return "[ id:" + id + ", name: " +name +" ,salary: " + salary +"]" ;
}
}
class sortsalary implements Comparator<employee>{

	@Override
	public int compare(employee o1, employee o2) {
		employee salary1=(employee)o1;
		employee salary2=(employee)o2;
		return salary1.compareTo(salary2);
	}
	
}
class sortName implements Comparator<employee>{

	@Override
	public int compare(employee o1, employee o2) {
		employee name1=(employee)o1;
		employee name2=(employee)o2;
		return name1.compareTo(name2);
	}
	
}
